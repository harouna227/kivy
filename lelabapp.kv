        text: 'F'  
  



<AnchorLayoutExemple>
    # right, left, center
    anchor_x: 'center'
    # bottom, top, center
    anchor_y: 'top'

    BoxLayout:
        size_hint: .1, .1
        Button:
            text: 'A'            
        Button:
            text: 'B'
            

<BoxLayoutExemple>
    orientation: 'vertical'
    Button:
        text: 'A'
        size_hint: .5, .5
        # size: '40dp', '40dp'
        # width: '200'
        height: '60dp'
        # x, right, center_X
        # y, top, center_y
        pos_hint: { 'right': 1 }
    BoxLayout:
        orientation: 'horizontal'
        spacing: '10dp'
        Button:
            text: 'B1'
        Button:
            text: 'B2'
        Button:
            text: 'B3'
        Button:
            text: 'B4'
    Label:
        text: 'C'



<GridLayoutExemple@GridLayout>
    # rows
    #rows: 3
    # cols
    cols: 3
    Button:
        text: 'A'
        size_hint: None, .5
        width: '60dp'
    BoxLayoutExemple: 
    Button:
        text: 'C'
    Button:
        text: 'D'
        size_hint: None, .5
        width: '60dp'
    Button:
        text: 'E' 
